# RestauApp Environment Variables
# ================================

# === APPLICATION ===
APP_NAME="RestauApp"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_PORT=8000

# === DATABASE ===
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=restaurant_app
DB_USERNAME=root
DB_PASSWORD=your_secure_password

# === CACHE & SESSION ===
CACHE_DRIVER=redis
SESSION_DRIVER=cookie
QUEUE_CONNECTION=redis

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# === MAIL ===
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your_mailtrap_username
MAIL_PASSWORD=your_mailtrap_password
MAIL_FROM_ADDRESS=noreply@restaurapp.com
MAIL_FROM_NAME="RestauApp"

# === SANCTUM (API) ===
SANCTUM_STATEFUL_DOMAINS=localhost:5173,127.0.0.1:5173
SESSION_DOMAIN=localhost

# === STRIPE PAYMENT ===
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# === PAYPAL PAYMENT ===
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_SECRET=your_paypal_secret

# === REVERB (WebSocket) ===
REVERB_APP_ID=your_app_id
REVERB_APP_KEY=your_app_key
REVERB_APP_SECRET=your_app_secret
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=http

# === SENTRY (Error Tracking) ===
SENTRY_LARAVEL_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=local

# === AWS S3 (File Storage) ===
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=your_bucket_name
AWS_URL=https://your_bucket.s3.amazonaws.com

# === SMS (Twilio) ===
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# === FRONTEND (Vite) ===
VITE_API_URL=http://localhost:8000/api
VITE_APP_NAME=RestauApp
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
VITE_SOCKET_URL=http://localhost:8080

# === LOGGING ===
LOG_CHANNEL=stack
LOG_LEVEL=debug
LOG_STACK=single
LOG_SLACK_WEBHOOK_URL=your_slack_webhook_url

# === ADMIN ===
ADMIN_EMAIL=admin@restaurant.com
ADMIN_PASSWORD=your_admin_password

# === FEATURES (Toggle) ===
FEATURE_STRIPE_ENABLED=true
FEATURE_PAYPAL_ENABLED=true
FEATURE_SMS_ENABLED=false
FEATURE_NOTIFICATIONS_ENABLED=true
FEATURE_REPORTS_ENABLED=true